{
  "name": "codorasdk",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo watch dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "storybook": "turbo watch storybook",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release-packages": "turbo run build lint test --filter='./packages/*' && changeset publish"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6"
  },
  "workspaces": [
    "./packages/*"
  ],
  "packageManager": "bun@1.2.17",
  "peerDependencies": {
    "typescript": "^5.9.2"
  }
}
